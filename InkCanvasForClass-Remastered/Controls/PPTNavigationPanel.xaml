<UserControl
    x:Class="InkCanvasForClass_Remastered.Controls.PPTNavigationPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:InkCanvasForClass_Remastered.Controls"
    xmlns:converters="clr-namespace:InkCanvasForClass_Remastered.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:PPTButtonPositionConverter x:Key="PPTButtonPositionConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <!-- Left Side Panel -->
        <Viewbox
            Height="155"
            Margin="{Binding PPTButton.LeftSidePosition, Converter={StaticResource PPTButtonPositionConverter}, ConverterParameter=Left}"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Visibility="{Binding PPTButton.IsLeftSideVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <controls:PPTNavigationButton
                DataContext="{Binding PPTButton}"
                NextClick="PPTButton_NextClick"
                PageClick="PPTButton_PageClick"
                PreviousClick="PPTButton_PreviousClick" />
        </Viewbox>

        <!-- Right Side Panel -->
        <Viewbox
            Height="155"
            Margin="{Binding PPTButton.RightSidePosition, Converter={StaticResource PPTButtonPositionConverter}, ConverterParameter=Right}"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Visibility="{Binding PPTButton.IsRightSideVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <controls:PPTNavigationButton
                DataContext="{Binding PPTButton}"
                NextClick="PPTButton_NextClick"
                PageClick="PPTButton_PageClick"
                PreviousClick="PPTButton_PreviousClick" />
        </Viewbox>
    </Grid>
</UserControl>